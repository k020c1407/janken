while True:
  import random
  print "Rock, paper, scissors!"
  human_choice = raw_input("Choose rock, paper, or scissors. Please use use lowercase.")

  computer_choice = random.randint(1, 3)
  if computer_choice == 1:
    computer_choice = "rock"
  elif computer_choice == 2:
    computer_choice = "paper"
  elif computer_choice == 3:
    computer_choice = "scissors"

  print computer_choice

  #if human_choice == "rock":

  if human_choice == "rock" and computer_choice == "paper":
    print "You lost!"
  elif human_choice == "rock" and computer_choice == "scissors":
    print "You won!"

  #if human_choice == "paper":

  if human_choice == "paper" and computer_choice == "rock":
    print "You won!"
  elif human_choice == "paper" and computer_choice == "scissors":
    print "You lost!"

  #if human_choice == "scissors":

  if human_choice == "scissors" and computer_choice == "rock":
    print "You lost!"
  elif human_choice == "scissors" and computer_choice == "paper":
    print "You won!"

  #if draw:

  if human_choice == "rock" and computer_choice == "rock":
    print "It's a tie!"
  elif human_choice == "paper" and computer_choice == "paper":
    print "It's a tie!"
  elif human_choice == "scissors" and computer_choice == "scissors":
    print "It's a tie!"

  print ""
